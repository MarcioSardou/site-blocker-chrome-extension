{
    "name": "Site Blocker",
    "description": "Block access to specific sites",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestWithHostAccess",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "Clique para alternar",
        "default_icon": "./icon.png",
        "default_popup": "popup.html"
    }
}